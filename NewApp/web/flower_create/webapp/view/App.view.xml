<mvc:View

	xmlns="sap.m"
    xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc">
    <Panel headerText="{i18n>header}" class="sapUiResponsiveMargin" width="auto">
		<content>
					<Label text="{i18n>name}" id="Label1"/>
					<Input width="100%" id="Name" enabled="true"/>
					<Label text="{i18n>surname}" id="Label2"/>
					<Input width="100%"  id="Input3" enabled="true"/>
                    <Button text="{i18n>create}" id="btnCreate"></Button>
												</content>
	</Panel>
</mvc:View>
