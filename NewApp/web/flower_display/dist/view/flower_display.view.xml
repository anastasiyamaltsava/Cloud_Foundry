<mvc:View controllerName="flower_display.controller.flower_display" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc">
	<Shell>
		<App id="home">
			<Page
				title="Flower display">
				<Panel class="sapUiResponsiveMargin" width="auto">
					<content>
						<Table id="flowerList" items="{
										path: 'flowers>/Flowers'
									}">
							<columns>
								<Column id="idColumn">
									<Text text="{id}" />
									</Column>
								<Column id="nameColumn">
									<Text text="{name}" />
								</Column>												
							</columns>
							<items>
								<ColumnListItem
									id="row">
									<cells>
										<Label text="{flowers>flid}" />
									</cells>
									<cells>
										<Label text="{flowers>name}" />
									</cells>																
								</ColumnListItem>
							</items>
						</Table>	
					</content>
				</Panel>
			</Page>
		</App>
	</Shell>
</mvc:View>